
@{
    ViewBag.Title = "UploadPictures";
}

<h2>Upload picture for device</h2>
@using (Html.BeginForm("UploadPictures", "Toevoegen", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form", })) 
{
    @Html.AntiForgeryToken()
    <h4>Selecteer een bestand</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger"})
    
    <div class="form-group">
        @Html.Label("Bestand: ", new { @class = "col-md-2 control-label"})
        <input type="file" name="picture" id="picture" />
        <input type="hidden" name="deviceId" value="@ViewBag.DeviceID"/>
    </div>
    <div class="form-group"></div>
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn btn-primary" value="Upload" />
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

